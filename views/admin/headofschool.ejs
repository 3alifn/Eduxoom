</body>
<script>



noview.port({
 input_class: 'headmaster',
 append_class: 'headmaster_append', 
 file_type: 'image', 
 max_kb_size: 1024,
 multiple: false,


})


noview.port({
 input_class: 'president',
 append_class: 'president_append', 
 file_type: 'image', 
 max_kb_size: 1024,
 multiple: false,
})




$("#personform").on('submit', (event)=>{
      event.preventDefault()
        $.ajax({
            method: "post",
            url: "/admin/setup/school-settings/person/post",
            data: $("#personform").serialize(),
            dataType: "JSON",
        beforeSend: function(){
      $(".submitbtn").addClass("btn disabled")
      _spin_pull()
            },
            success: function (info) {
                _spin_pop()
                _msg_pull( 'alert-success', 'Updated...', null)
                $(".submitbtn").removeClass("disabled")

    
            }
        });
    
    })
  

$(".pushed").on('change', (event)=>{
      const jsform= new FormData();
      const thisIs = event.currentTarget.attributes[0].value;
jsform.append('image',$('.'+thisIs).get(0).files[0]); 
jsform.append('imgrole',thisIs); 
 console.log(thisIs, $('.'+thisIs).get(0).files[0]);

        $.ajax({
            method: "post",
            url: "/admin/setup/school-settings/img/post",
            data: jsform,
             mimeType: "multipart/form-data",
              cache: false,
              processData: false,
              contentType: false,
               dataType: "JSON",
       
        beforeSend: function(){
      $(".submitbtn").addClass("btn disabled")
      _spin_pull()
            },
            success: function (info) {
                _spin_pop()
                _msg_pull( 'alert-success', 'Updated...', null)
                $(".submitbtn").removeClass("disabled")

    
            }
        });
    
    })




</script>


