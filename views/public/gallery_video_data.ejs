<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery Video</title>

<%- include("../component/metadata.html") %>


</head>

    
<style>

  
  .container img { width: 200px; height: 150px; float: left;  }
  
  .img-btn:hover{
    cursor: pointer;
  }
  
  </style>

<body onload="pageLoadingTop()">
    

          
<%- include("../component/header-nav.html") %>
<%- include("../component/menu-nav.html") %>
<%- include("../component/offcanvas-nav.html") %>
  

  
            <div id="listDataPrint" class="row shadowx mt-b mbx">
              
              <div class="col-11 m-auto">
                <p class="p-2 fw-semibold shadowx ">Our gallery videos</p>
            </div>
    
            <% if(info.length==0) {%>
                <div class="col-11 m-auto">
                    <p class="p-2 fw-semibold shadowx alert">No record</p>
                </div>
                <% } %>
  
              <% for( let index = 0; index < info.length; index++ ) { %>
              
                <div class="col-10 col-md-3 m-auto m-md-0 p-2">

                    <div class="card" id="">
                        <iframe class='video-scope card-img-top bg-demo-img-color' src="<%=info[index].item_name.replace("watch?v=", "embed/")%>/iframe>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
       
                    </div>
       
                    </div>

              <% } %>
             
              
            </div>
  
  
      
      
      <!-- Button trigger modal -->
  
      
   <!-- Modal -->
  <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-centered" role="document">
      
      <img  id="modal-img" class="bg-demo-img-color" height="250px" width="100%" src="" alt="loading...">
      
    </div>
  </div>
      
  <button  id="modal-btn" type="button" class="btn d-none btn-lg" data-toggle="modal" data-target="#modelId">
  </button>



<%- include("../component/footer-nav.html") %>

  
  </body>
  
  
  <script>
  

      $(document).on('click', '.img-btn', (event)=>{
        const data= event.currentTarget.attributes[2].value;
        
        $("#modal-img").attr('src', data)
      
        $("#modal-img").addClass('overlay-img')
        $("#modal-btn").click()
      
      })
      
    
  
  
  
      
  </script>
      

</html>